<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        app:srcCompat="@drawable/wavanalles"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageview_list_item_afbeelding"
                        android:contentDescription="@string/lunch_afbeelding_beschrijving"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                <TextView
                        android:text="Lekker Thais"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/textview_list_item_naam"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageview_list_item_afbeelding"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="Prijs: â‚¬ 25,00"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_list_item_prijs"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textview_list_item_naam"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        android:text="Geniet van een lekkere Thaise lunch onder de middag. Dit gerecht bestaat uit 4 kleine Thaise gerechten geserveerd met een kommetje rijst."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_list_item_beschrijving"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:paddingBottom="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textview_list_item_prijs"
                        app:layout_constraintHorizontal_bias="0.0"/>

        </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


