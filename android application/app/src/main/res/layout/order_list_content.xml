<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_order_list_content_lunchafbeelding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/description_order_list_content_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars[12]"/>

        <TextView
                android:id="@+id/tv_order_list_content_lunch_merchant"
                android:text="@string/example_reservation_lunch_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_order_list_content_lunchafbeelding"/>

        <TextView
                android:id="@+id/tv_order_list_content_lunch_name"
                android:text="@string/example_reservation_lunch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_list_content_lunch_merchant"
                app:layout_constraintStart_toEndOf="@+id/iv_order_list_content_lunchafbeelding"/>

        <TextView
                android:id="@+id/tv_order_list_content_aantal"
                android:text="@string/example_reservation_aantal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_list_content_lunch_name"
                app:layout_constraintStart_toEndOf="@+id/iv_order_list_content_lunchafbeelding"/>

        <TextView
                android:id="@+id/tv_order_list_content_date"
                android:text="@string/example_reservation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_order_list_content_lunchafbeelding"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_list_content_aantal"/>

        <TextView
                android:id="@+id/tv_order_list_content_status"
                android:text="@string/example_reservation_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_order_list_content_lunchafbeelding"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_list_content_date"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>