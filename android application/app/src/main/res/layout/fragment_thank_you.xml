<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ThankYouFragment">

    <!-- virtuele scheidingslijn verticaal 10% -->
    <android.support.constraint.Guideline
            android:id="@+id/guideline_thank_you_10percent_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

    <!-- virtuele scheidingslijn verticaal 90% -->
    <android.support.constraint.Guideline
            android:id="@+id/guideline_thank_you_90percent_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

    <TextView
            android:id="@+id/bedanktTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/thank_you_fragment_thank_you_message"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_thank_you_10percent_vertical"
            app:layout_constraintEnd_toStartOf="@+id/guideline_thank_you_90percent_vertical"/>

    <TextView
            android:id="@+id/bedanktMessageTextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/thank_you_fragment_bevestiging_reservatie"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline_thank_you_10percent_vertical"
            app:layout_constraintTop_toBottomOf="@+id/bedanktTextview"
            app:layout_constraintHorizontal_bias="0.458" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_thank_you_90percent_vertical"/>

    <Button
            android:id="@+id/backButton"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@color/colorPrimary"
            android:text="@string/thank_you_fragment_back_button"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/bedanktMessageTextview"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_thank_you_10percent_vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_thank_you_90percent_vertical"/>


</android.support.constraint.ConstraintLayout>