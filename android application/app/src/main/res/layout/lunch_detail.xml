<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>

        <variable
                name="lunchViewModel"
                type="hogent.be.lunchers.viewmodels.LunchViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lunch_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imageview_lunch_detail_afbeelding"
                    android:contentDescription="@string/lunch_afbeelding_beschrijving"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H,16:9"
                    android:scaleType="centerCrop"
                    android:src="@{lunchViewModel.getSelectedLunch().afbeeldingen[0].pad}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:text="@{lunchViewModel.getSelectedLunch().naam}"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/textview_lunch_detail_naam"
                    app:layout_constraintTop_toBottomOf="@+id/imageview_lunch_detail_afbeelding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:text="@{lunchViewModel.getSelectedLunch().beschrijving}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_lunch_detail_beschrijving"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_naam"/>

            <TextView
                    android:drawableStart="@drawable/ic_euro_symbol_red_24dp"
                    android:drawablePadding="6dp"
                    android:text="@{lunchViewModel.getSelectedLunch().prijs}"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_lunch_detail_prijs"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_beschrijving"/>
            <TextView
                    android:text="@{lunchViewModel.getSelectedLunch().handelaar.handelsNaam}"
                    android:drawablePadding="6dp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_lunch_detail_restaurant"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_prijs"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:drawableStart="@drawable/ic_restaurant_black_24dp"
            />

            <TextView
                    android:textColor="@android:color/black"
                    android:text="@{lunchViewModel.getSelectedLunch().handelaar.locatie.straat + ` ` + lunchViewModel.getSelectedLunch().handelaar.locatie.huisnummer + `, ` + lunchViewModel.getSelectedLunch().handelaar.locatie.postcode +` `+ lunchViewModel.getSelectedLunch().handelaar.locatie.gemeente}"
                    android:drawablePadding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_lunch_location_restaurant"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_restaurant"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:drawableStart="@drawable/ic_location_red_24dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/button_lunch_detail_reserveren"/>


            <Button
                    android:text="@string/button_lunch_detail_tekst"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_lunch_detail_reserveren"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/button_lunch_detail_bellen"/>
            <Button
                    android:text="@string/button_lunch_detail_tekst_bellen"
                    android:layout_width="match_parent"
                    android:background="@color/lightGrey"
                    android:textColor="#000"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_lunch_detail_bellen"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="36dp"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</layout>