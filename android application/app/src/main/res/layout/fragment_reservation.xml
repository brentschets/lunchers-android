<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>

        <variable name="reservationViewModel" type="hogent.be.lunchers.viewmodels.ReservationViewModel"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

        <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/reservatie_titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/textView2"/>
        <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@{reservationViewModel.getSelectedLunch().naam}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reservation_date"
                android:textSize="15sp"
                android:textStyle="bold" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/reserveren_datePicker_button" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>

        <Button
                android:id="@+id/reserveren_datePicker_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_reservation_date"
                android:textColor="#000"
                android:background="@color/lightGrey"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reservation_time"
                android:textSize="15sp"
                android:textStyle="bold" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/reserveren_timePicker_button"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView"/>

        <Button
                android:id="@+id/reserveren_timePicker_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/et_reservation_time"
                android:textColor="#000"
                android:background="@color/lightGrey"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/reserveren_aantal_text"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:hint="@string/et_reservation_amount"
                android:id="@+id/reserveren_aantal_text"
                tools:ignore="Autofill" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/et_reservation_message"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        <EditText
                android:inputType="textMultiLine"
                android:id="@+id/et_reservation_message"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minLines="4"
                android:lines="5"
                android:maxLines="6"
                android:scrollbars="vertical"
                android:ems="10"
                android:gravity="top|start"
                android:hint="@string/et_reservation_message"
                tools:ignore="Autofill"
                app:layout_constraintBottom_toTopOf="@+id/reserveren_submit_button"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <Button
                android:id="@+id/reserveren_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_reservation_order"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/reserveren_cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <Button
                android:id="@+id/reserveren_cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_reservation_cancel"
                android:background="@color/lightGrey"
                android:textColor="#000"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    </android.support.constraint.ConstraintLayout>

    </ScrollView>

</layout>