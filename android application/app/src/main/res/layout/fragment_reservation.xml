<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:gravity="center" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReservationFragment"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies een datum"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/datePickerButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Datum kiezen"
        android:background="@color/lightGrey"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies een tijd"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/timePickerButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Tijd kiezen"
        android:background="@color/lightGrey"/>


    <EditText
        android:id="@+id/opmerkingenInput"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Opmerkingen"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/reserveren_button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Reserveren"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/annuleerButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Annuleren"
        android:background="@color/lightGrey" />




</LinearLayout>